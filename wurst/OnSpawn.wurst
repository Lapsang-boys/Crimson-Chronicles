package OnSpawn

trigger creepEnter = CreateTrigger()

function act()
    let pos = gg_rct_A1P1Node1.getCenter()
    GetTriggerUnit().issuePointOrder("move", pos)

function isUnitOwnedByPlayerRed() returns boolean
    return GetTriggerUnit().getOwner() == Player(0)

init
    creepEnter.addCondition(Condition(function isUnitOwnedByPlayerRed))
    creepEnter.addAction(function act)
    TriggerRegisterEnterRectSimple(creepEnter, gg_rct_A1P1Spawn)
