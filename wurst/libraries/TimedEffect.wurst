package TimedEffect

import ClosureTimers

public function unit.attatchTimedEffect(real duration, string fxPath, string attachPoint)
    effect e = this.addEffect(fxPath, attachPoint)
    doAfter(duration, () -> begin
        e.destr()
    end)

public function createTimedEffect(vec2 loc, real duration, string fxPath)
    effect e = AddSpecialEffect(fxPath, loc.x, loc.y)
    doAfter(duration, () -> begin
        e.destr()
    end)

